{
  "expo": {
    "name": "RaceMe Running",
    "slug": "RaceMe",
    "privacy": "public",
    "sdkVersion": "31.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.codlex.RaceMe",
      "infoPlist" : {
        "NSLocationWhenInUseUsageDescription" : "We need to access your location so that we can mesure distance passed while running."
      }
    },
    "android": {
      "versionCode": 5,
      "package": "com.codlex.RaceMe",
      "permissions" : ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
    }
  }
}
